<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profle_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/nav_profile_picture" />

    <ImageView
        android:layout_toRightOf="@+id/profle_photo"
        android:id="@+id/profil_degistirme_imageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profle_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"

        android:text="Nefise Özşahin"
        android:textStyle="bold"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/profile_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Gezmeyi ve kitap okumayı severim" />

    <TextView
        android:id="@+id/profile_user_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_bio"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Gezdiğim Şehirler: Adana, Mardin, İstanbul, İzmir" />

    <ImageView
        android:id="@+id/profile_user_instagram"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/profile_user_place"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/instagram_ic" />

</RelativeLayout>


